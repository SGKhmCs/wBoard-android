<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lucasurbas.listitemview.ListItemView
        android:id="@+id/board_list_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liv_title="title"
        app:liv_subtitle="subtitle"
        app:liv_icon="@drawable/ic_developer_board"
        app:liv_iconColor="@color/primary"
        app:liv_multiline="false"
        app:liv_displayMode="icon"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/primary"
        android:layout_height="1dp" />

</LinearLayout>

